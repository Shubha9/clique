<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The bottom layer is square.-->
    <item
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp">
        <shape>
            <solid android:color="@color/white"  />
            <corners android:radius="5dp"/>
            <stroke android:color="@color/tab_text"
                android:width="1dp"/>
            <size android:height="20dp"
                android:width="20dp" />
        </shape>
    </item>
    <!-- The middle layer is circle.-->
    <item>
        <shape android:shape="oval">
            <size
                android:width="20dp"
                android:height="20dp" />
            <stroke android:width="20dp" android:color="#00000000"/>
            <solid android:color="@color/blue" />
        </shape>
    </item>

</layer-list>