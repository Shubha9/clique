<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="report_popup"
            type="com.us.clique.bottomNavigation.fragments.module.BottomNavigationViewModel"
            />
    </data>
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/backround_curve_white_bg"
        tools:context="com.us.figma.report.BlockPopupActivity">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_curve_blue"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_18"
                android:layout_marginLeft="@dimen/dimen_27"
                android:text="Report"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dimen_10"
                android:fontFamily="@font/manrope_extrabold"
                android:textSize="@dimen/dimen_17"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_27"
                android:text="@string/black_text"
                android:layout_marginRight="48dp"
                android:textColor="@color/white"
                android:layout_marginBottom="@dimen/dimen_32"
                android:fontFamily="@font/manrope_bold"
                android:textSize="@dimen/dimen_13"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_fakeprofile"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/fakeprofile"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_15"/>
                <TextView
                    android:id="@+id/tv_fakeprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fake Profile"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_9"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_14"/>

            </LinearLayout>
            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_b"/>
            <LinearLayout
                android:id="@+id/ll_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_img"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/inter_icon"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inappropriate content"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginLeft="@dimen/dimen_14"/>
            </LinearLayout>
            <View
                android:id="@+id/view_2"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_b"/>
            <LinearLayout
                android:id="@+id/ll_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_scam"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/scam"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_scam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scam or Commercial"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_14"/>
            </LinearLayout>
            <View
                android:id="@+id/view_3"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_b"/>
            <LinearLayout
                android:id="@+id/ll_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_speech"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/speech"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_speech"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hate Speech"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_14"/>
            </LinearLayout>
            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_b"/>
            <LinearLayout
                android:id="@+id/ll_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_bumble"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/bumble"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_bumble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Off Bumble  behaviour"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_14"/>
            </LinearLayout>
            <View
                android:id="@+id/view_5"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_b"/>
            <LinearLayout
                android:id="@+id/ll_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"

                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_age"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/underage"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginTop="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Underage"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_14"/>
            </LinearLayout>
            <View
                android:id="@+id/view_6"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_b"/>
            <LinearLayout
                android:id="@+id/ll_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_notintrest"
                    android:layout_width="@dimen/dimen_8"
                    android:layout_height="@dimen/dimen_11"
                    android:src="@drawable/not_interest"
                    android:layout_marginLeft="@dimen/dimen_29"
                    android:layout_marginBottom="@dimen/dimen_19"
                    android:layout_marginTop="@dimen/dimen_12"/>
                <TextView
                    android:id="@+id/tv_notIntrest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I’m just not Interested"
                    android:textSize="@dimen/dimen_13"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_marginTop="@dimen/dimen_7"
                    android:textColor="@color/bottom_tex_bg"
                    android:layout_marginBottom="@dimen/dimen_19"
                    android:layout_marginLeft="@dimen/dimen_14"/>
            </LinearLayout>
            <Button
                android:id="@+id/bt_report"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/dimen_30"
                android:layout_marginLeft="@dimen/dimen_30"
                android:layout_marginBottom="@dimen/dimen_25"
                android:background="@drawable/button_background"
                android:text="Report"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_15"
                android:fontFamily="@font/manrope_extrabold"/>
        </LinearLayout>
    </LinearLayout>
</layout>