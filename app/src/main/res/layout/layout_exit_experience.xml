<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_30"
    android:layout_marginRight="30dp"
    android:background="@drawable/btn_white_bg"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit Experience"
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_14"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_21"
        android:fontFamily="@font/manrope_extrabold"/>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_16"
        android:layout_marginTop="@dimen/dimen_11"
        android:background="@color/view1"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:text="Make another participant the admin before exiting."
        android:textColor="@color/gray_txt_color"
        android:fontFamily="@font/manrope_extrabold"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_marginRight="@dimen/dimen_30"
        android:textSize="@dimen/font_11"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:fontFamily="@font/manrope_extrabold"
        android:textSize="@dimen/dimen_10"
        android:text="SELECT ONE"
        android:layout_marginTop="@dimen/dimen_32"
        android:textColor="@color/black2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:id="@+id/recyclerview"/>
    <Button
        android:id="@+id/btn_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Admin"
        android:fontFamily="@font/manrope_extrabold"
        android:textSize="@dimen/font_15"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_marginBottom="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:background="@drawable/button_background"/>
</LinearLayout>