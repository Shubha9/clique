<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="share_fragment"
            type="com.us.clique.bottomNavigation.fragments.module.BottomNavigationViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rlbottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_line"
                android:layout_width="@dimen/dimen_30"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/bottom_line"/>
            <RelativeLayout
                android:id="@+id/rl_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_line"
                android:padding="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="@dimen/dimen_20"
                    android:layout_height="@dimen/dimen_20"
                    android:src="@drawable/ic_share_bottom"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share Experience"
                    android:textColor="@color/tab_text"
                    android:fontFamily="@font/manrope_bold"
                    android:textSize="@dimen/font_14"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/dimen_5"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:id="@+id/view_line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/rl_block"
                android:layout_marginRight="@dimen/dimen_20"
                android:layout_marginLeft="@dimen/dimen_20"
                android:background="@color/bottom_line"
                android:layout_marginTop="@dimen/dimen_10"/>

            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/email_icon"
                android:layout_below="@+id/view_line1"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginTop="@dimen/dimen_20"/>



            <TextView
                android:id="@+id/tv_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_10"
                android:text="Send via Direct Message"
                android:layout_toRightOf="@+id/iv_email"
                android:layout_below="@+id/view_line1"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_40"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="@dimen/dimen_20"
                android:textColor="@color/text_email"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_below="@+id/tv_block"
                android:layout_marginBottom="@dimen/dimen_20"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_whatas_app"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/whatsupp_icon"
                    android:layout_marginLeft="@dimen/dimen_20"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fb_icon"
                    android:layout_marginLeft="@dimen/dimen_20"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/twetter_icon"
                    android:layout_marginLeft="@dimen/dimen_20"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/insta_icon"
                    android:layout_marginLeft="@dimen/dimen_20"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>