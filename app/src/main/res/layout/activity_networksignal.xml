<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activites.NetworkActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_50">
                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_onBackPress"
                        android:layout_width="@dimen/dimen_25"
                        android:layout_height="@dimen/dimen_25"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:src="@drawable/backpress"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Network Signal Error"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:textSize="@dimen/font_18"
                        android:textColor="@color/events_color"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network Signal not available"
                android:fontFamily="@font/manrope_bold"
                android:id="@+id/tv_networktxt"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimen_91"
                android:textSize="@dimen/dimen_12"
                android:layout_above="@id/txt1"
                android:textColor="@color/other_text"/>
            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/network"
                android:textSize="@dimen/dimen_11"
                android:fontFamily="@font/manrope_bold"
                android:textColor="@color/other_text"
                android:layout_marginTop="@dimen/dimen_8"
                android:layout_marginLeft="@dimen/dimen_40"
                android:layout_marginRight="@dimen/dimen_40"/>
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:src="@drawable/networkerror"
                android:layout_marginTop="@dimen/dimen_40"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/bt_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_91"
                android:background="@drawable/button_background"
                android:layout_marginLeft="@dimen/dimen_100dp"
                android:layout_marginRight="@dimen/dimen_100dp"
                android:layout_marginBottom="@dimen/dimen_58"
                android:text="Refresh"
                android:textColor="@color/white"
                android:fontFamily="@font/manrope_extrabold"
                android:textSize="@dimen/dimen_15"/>
        </LinearLayout></ScrollView>
</LinearLayout>