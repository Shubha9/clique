<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_22"
    android:layout_marginRight="24dp"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="@color/blue"
        android:textSize="@dimen/dimen_18"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_21"
        android:fontFamily="@font/manrope_bold"/>
    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_28"
        android:layout_marginRight="@dimen/dimen_28"
        android:layout_marginTop="@dimen/dimen_11"
        android:background="@color/view1"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_28"
        android:text="Are you sure want to delete your account ?"
        android:textColor="@color/txt_color"
        android:fontFamily="@font/manrope_bold"
        android:layout_marginTop="@dimen/dimen_17"
        android:layout_marginRight="@dimen/dimen_10"
        android:textSize="@dimen/dimen_16"/>
    <RelativeLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_28"
        android:layout_marginBottom="@dimen/dimen_17"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:layout_toLeftOf="@+id/tv_yes"
            android:textSize="@dimen/dimen_15"
            android:textColor="@color/blue"
            android:fontFamily="@font/manrope_bold"/>
        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_10"
            android:textColor="@color/blue"
            android:fontFamily="@font/manrope_bold"/>

    </RelativeLayout>
</LinearLayout>