<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="settings"
            type="com.us.clique.bottomNavigation.fragments.module.BottomNavigationViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activites.SettingsActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_margin="@dimen/dimen_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_onBackPress"
                    android:layout_width="@dimen/dimen_30"
                    android:layout_height="@dimen/dimen_30"
                    android:layout_centerVertical="true"
                    android:src="@drawable/backpress" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/manrope_bold"
                    android:text="Settings"
                    android:textColor="@color/events_color"
                    android:textSize="@dimen/font_18" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_notification"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:background="@drawable/youex_bg"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_below="@+id/rl_findText"
                    android:layout_marginTop="@dimen/dimen_20">

                    <ImageView
                        android:id="@+id/iv_notification"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:src="@drawable/ic_notification" />

                    <TextView
                        android:id="@+id/tv_notification"
                        android:layout_toRightOf="@+id/iv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification"
                        android:textColor="@color/tab_text"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:textSize="@dimen/font_16"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_help"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:background="@drawable/youex_bg"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_below="@+id/rl_findText"
                    android:layout_marginTop="@dimen/dimen_20">

                    <ImageView
                        android:id="@+id/iv_help"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:src="@drawable/help_icon" />

                    <TextView
                        android:id="@+id/tv_help"
                        android:layout_toRightOf="@+id/iv_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        android:textColor="@color/tab_text"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:textSize="@dimen/font_16"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:background="@drawable/youex_bg"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_below="@+id/rl_findText"
                    android:layout_marginTop="@dimen/dimen_20">

                    <ImageView
                        android:id="@+id/iv_about"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:src="@drawable/ic_about" />

                    <TextView
                        android:id="@+id/tv_about"
                        android:layout_toRightOf="@+id/iv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textColor="@color/tab_text"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:textSize="@dimen/font_16"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_logout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:background="@drawable/youex_bg"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_below="@+id/rl_findText"
                    android:layout_marginTop="@dimen/dimen_20">

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:src="@drawable/log_out" />

                    <TextView
                        android:id="@+id/tv_logout"
                        android:layout_toRightOf="@+id/iv_logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@color/tab_text"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:textSize="@dimen/font_16"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_100dp"
                    android:background="@drawable/youex_bg"
                    android:layout_marginLeft="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_below="@+id/rl_findText"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:layout_marginBottom="@dimen/dimen_58">

                    <ImageView
                        android:id="@+id/iv_delete"
                        android:layout_width="@dimen/dimen_50"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dimen_20"
                        android:src="@drawable/delete_icon" />

                    <TextView
                        android:id="@+id/tv_delete"
                        android:layout_toRightOf="@+id/iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textColor="@color/tab_text"
                        android:fontFamily="@font/manrope_bold"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:textSize="@dimen/font_16"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>