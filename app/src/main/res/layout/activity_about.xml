<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="about"
            type="com.us.clique.bottomNavigation.fragments.module.BottomNavigationViewModel"
            />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.us.figma.report.AboutActivity">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_206"
                android:orientation="vertical">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50">
                    <RelativeLayout
                        android:id="@+id/rl_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_onBackPress"
                            android:layout_width="@dimen/dimen_25"
                            android:layout_height="@dimen/dimen_25"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:src="@drawable/backpress"
                            android:layout_centerVertical="true"/>

                        <TextView
                            android:id="@+id/tv_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About"
                            android:fontFamily="@font/manrope_bold"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dimen_10"
                            android:textSize="@dimen/font_18"
                            android:textColor="@color/events_color"
                            android:layout_centerVertical="true"/>

                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>
                <TextView
                    android:id="@+id/tv_datapolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Policy"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_37"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="@dimen/dimen_31"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of use"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_37"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="@dimen/dimen_31"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_opensource"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Source Libraries"
                    android:fontFamily="@font/manrope_bold"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_37"
                    android:textSize="@dimen/font_14"
                    android:textColor="@color/black_text"
                    android:layout_marginLeft="@dimen/dimen_31"
                    android:layout_centerVertical="true"/>
            </LinearLayout>
    </LinearLayout>     </ScrollView>
</layout>